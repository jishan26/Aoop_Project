        <!-- Login Button -->
        <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="50.0" prefWidth="320.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 25; -fx-cursor: hand; -fx-font-family: 'Arial', sans-serif; -fx-border-width: 0;" text="Sign In">
