            <Label style="-fx-font-size: 14px; -fx-font-weight: 500; -fx-font-family: 'Arial', sans-serif;" text="Email Address" textFill="#2C3E50" />
            <TextField fx:id="emailField" prefHeight="45.0" promptText="Enter your email address" style="-fx-background-color: #F8F9FA; -fx-border-color: #E5E5E5; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14px; -fx-text-fill: #2C3E50; -fx-prompt-text-fill: #95A5A6;">
