                    <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                </padding>
            </TextField>
        </VBox>

        <!-- Password Field -->
        <VBox prefWidth="320.0" spacing="8.0">
            <Label style="-fx-font-size: 14px; -fx-font-weight: 500; -fx-font-family: 'Arial', sans-serif;" text="Password" textFill="#2C3E50" />
            <PasswordField fx:id="passwordField" prefHeight="45.0" promptText="Enter your password" style="-fx-background-color: #F8F9FA; -fx-border-color: #E5E5E5; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14px; -fx-text-fill: #2C3E50; -fx-prompt-text-fill: #95A5A6;">
