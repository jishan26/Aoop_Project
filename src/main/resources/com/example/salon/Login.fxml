        <!-- Login Header -->
        <VBox alignment="CENTER" spacing="5.0">
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-font-family: 'Arial', sans-serif;" text="Welcome Back" textFill="#2C3E50" />

